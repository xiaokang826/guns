<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stylefeng.guns.modular.game.dao.DominoRoomMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="hashmap">
        <id column="id" property="id" />
        <result column="room_id" property="roomId" />
        <result column="min_join_table" property="minJoinTable" />
        <result column="ante" property="ante" />
        <result column="service_charge" property="serviceCharge" />
        <result column="doubleRoles" property="doubleRoles" />
        <result column="on_off" property="onOff" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
       id, room_id, min_join_table, ante, service_charge, doubleRoles, on_off
    </sql>

    <select id="selectList" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from room_config
    </select>
</mapper>
